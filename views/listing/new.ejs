<% layout('layout/boilerplate')-%>
    <h2 class="mt-3 offset-1">Create a new Listing</h2>
    <div class="row mt-3">
        
    <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="col-8 offset-1">
      <div class="mb-3 ">
        <label  for="title" class="form-label">Title</label>
        <input type="text"  class="form-control" name="listing[title]"  placeholder="write the title" required />
        <div class="valid-feedback">
         Looks good!
       </div>
     </div>
    
     <div class="mb-3 ">
        <label  for="description" class="form-label">Description</label>
        <textarea type="text" class="form-control" name="listing[description]" placeholder="write the description" rows="5" cols="20" required></textarea>
        <div class="invalid-feedback">
        Please choose a valid description.
      </div>
      </div>

      <div class="mb-3">
        <label  for="image" class="form-label ">Upload a Image</label>
        <input type="file" class="form-control" name="listing[image]" placeholder="enter the image URL/link" required/>
        <div class="invalid-feedback">
         Please choose a valid image
       </div>
      </div>
      
    <div class="row">
     <div class="mb-3 col-auto">
        <label  for="price" class="form-label">Price</label>
        <input type="text" class="form-control" name="listing[price]" placeholder="enter the price" required/>
        <div class="invalid-feedback">
         Please choose a valid Price.
       </div>
      </div>

     <div class="mb-3 col-auto">
        <label  for="location" class="form-label">Location</label>
        <input type="text" class="form-control" name="listing[location]" placeholder="enter the location" required />
        <div class="invalid-feedback">
         Please choose a valid Location.
       </div>
      </div>
    </div>
     <div class="mb-3">
        <label  for="country" class="form-label">Country</label>
        <input type="text" class="form-control" name="listing[country]" placeholder="enter the country" required/>
        <div class="invalid-feedback">
         Please choose a valid Country.
       </div>
     </div>
     <button class="btn btn-danger mb-4 offset-11">Add</button>
    </div>
    </form>
</div>

</body>

        